{
  "version": 2,
  "builds": [
    { "src": "public/index.php", "use": "@vercel/php" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "public/index.php" }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_KEY": "base64:YOUR_APP_KEY_HERE",
    "LOG_CHANNEL": "stderr"
  }
}
